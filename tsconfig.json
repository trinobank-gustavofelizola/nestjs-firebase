{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@9renpoto/tsconfig",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./lib",
        "noEmit": false,
        "strictPropertyInitialization": false,
        "target": "ESNext",
        "skipLibCheck": true
    },
    "exclude": [
        "__tests__/*",
        "*.spec.ts"
    ],
    "include": [
        "src"
    ]
}